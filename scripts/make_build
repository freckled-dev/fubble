#!/bin/bash

set -ex
cd "$(dirname "$0")"

scripts_dir="$(pwd)"
source_dir="$(realpath ..)"
project_root_dir="$(git rev-parse --show-toplevel)"
build_dir="$project_root_dir/../fubble_build"
prefix_dir="$build_dir/install"
dependencies_dir="$build_dir/dependencies"

mkdir -p $build_dir
cd $build_dir

mkdir -p $dependencies_dir
cd $dependencies_dir
$scripts_dir/get_dependencies_conan

cd $build_dir
export PKG_CONFIG_PATH="${dependencies_dir}"
export BOOST_ROOT=$(pkg-config --variable=prefix boost)
export CC=clang
export CXX=clang++
meson "$source_dir" meson --prefix="$prefix_dir" \
  -Db_sanitize=address \
  -Db_lundef=false \
  -Db_coverage=true \
  -Dwarning_level=3 \
  -Dwerror=true

#  -Ddefault_library=static \

ln -frs meson/compile_commands.json ..

